<h2>Found reviews: </h2>
{{#reviews}}
<div class="dialogbox">
    <div class="body">
        <div class="message review">
            <div class="review-title">Score: {{score}}/5 â€¢ {{{textFields.reviewTitle}}}</div>
            <div class="review-body">{{{textFields.reviewBody}}}</div>
            <div class="review-pros">{{{textFields.reviewPros}}}</div>
            <div class="review-cons">{{{textFields.reviewCons}}}</div>
            <div class="review-data">{{source}} - Published on: {{date}}</div>
        </div>
    </div>
</div>
{{/reviews}}

{{^paginationData.hasReviews}}
  <span>That search didn't return any result. Please, change your search criteria and try again.</span>
{{/paginationData.hasReviews}}

{{#paginationData.hasReviews}}
  <div class="center"><div class="pagination">
  {{#paginationData.showOnlyNextButton}}
      <div class="infinite-pagination"><span class="page-number">Page {{paginationData.currentPageLabel}}</span> <a href="#" class="page-link next-page-link" data-navigate-to-page="{{paginationData.nextPage}}">Next</a></div>
  {{/paginationData.showOnlyNextButton}}
  
  {{^paginationData.showOnlyNextButton}}
  
      {{^paginationData.isFirstPage}}
      <a href="#search-result" class="page-link" data-navigate-to-page="{{paginationData.previousPage}}">&laquo;</a>
      {{/paginationData.isFirstPage}}
  
      {{#paginationData.previousPagesList}}
      <a href="#search-result" class="page-link" data-navigate-to-page="{{pageNumber}}">{{pageLabel}}</a>
      {{/paginationData.previousPagesList}}
      <a class="active" href="#search-result">{{paginationData.currentPageLabel}}</a>
      {{#paginationData.nextPagesList}}
      <a href="#search-result" class="page-link" data-navigate-to-page="{{pageNumber}}">{{pageLabel}}</a>
      {{/paginationData.nextPagesList}}
  
      {{^paginationData.isLastPage}}
      <a href="#search-result" class="page-link" data-navigate-to-page="{{paginationData.nextPage}}">&raquo;</a>
      {{/paginationData.isLastPage}}
      
  {{/paginationData.showOnlyNextButton}}
  </div></div>
{{/paginationData.hasReviews}}
